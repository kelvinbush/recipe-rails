<h3>Create new Food</h3>

<%= form_with model: @food, url: foods_path, method: :post, data: { turbo: false } do |form| %>
  <div class="mb-3">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control', placeholder: 'Food name' %>
  </div>
  <div class="mb-3">
    <%= form.label :measurement_unit %>
    <%= form.text_field :measurement_unit, class: 'form-control', placeholder: 'Kgs' %>
  </div>

  <div class="mb-3">
    <%= form.label :price %>
    <%= form.text_field :price, class: 'form-control', placeholder: '23', type: 'number', step: ".01" %>
  </div>

  <div class="mb-3">
    <%= form.label :quantity %>
    <%= form.text_field :quantity, class: 'form-control', placeholder: '2', type: 'number' %>
  </div>

  <div class="mb-3">
    <%= form.submit 'Create food', class: 'btn btn-primary' %>
  </div>
<% end %>
